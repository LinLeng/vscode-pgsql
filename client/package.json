{
  "name": "pgsql",
  "description": "postgres language support, snippets, runner. Fixed clone of postgresql@0.0.2 by JPTarquino",
  "license": "MIT",
  "version": "0.0.3",
  "publisher": "doublefint",
  "engines": { "vscode": "^0.10.1" },
  "icon": "images/logo.png",
  "repository": { "type": "git", "url": "https://github.com/doublefint/vscode-pgsql.git" },
  "categories": [ "Languages", "Other" ],
  "activationEvents": [ "onLanguage:pgsql" ],
  "main": "./out/extension",
  "contributes": {

    "commands": [
      { "category": "pgsql", "command": "pgsql.run", "title": "run sql in postgres" }
    ],

    "languages": [{
        "id": "pgsql",
        "extensions": [ ".sql", ".ddl", ".dml", ".pgsql" ],
        "aliases": [ "pgsql", "postgres", "postgreSQL", "plpgsql", "pg" ],
        "configuration": "./pgsql.configuration.json"
      }
    ],
    
    "snippets": [ { "language": "pgsql", "path": "./snippets/pgsql_snippets.json" } ],
    
    "grammars": [ { "language": "pgsql",
        "scopeName": "source.plpgsql.postgres",
        "path": "./syntaxes/pgsql.tmLanguage"
      }
    ],

    "configuration": {
      
      "title": "pgsql configuration", "type": "object", 
      "properties": {
        "pgsql.connection": {
          "type": "string",
          "default": "postgres://username:pasword@localhost:5432/dbname",
          "description": "connection string to your db"
        }
      }

    }
  
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^1.6.2",
    "vscode": "0.10.x"
  },
  "dependencies": {
    "vscode-languageclient": "^1.1.0"
  }
}
